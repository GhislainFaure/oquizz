<%- include('partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h2 class="h1 display-4">Créer un niveau de difficulté</h2>
</div>

<div class="row">
    <div class="col-6 offset-3">
        <form action="/admin/level/create" method="POST" class="form-signup">

            <div class="form-label-group">
                <input type="text" class="form-control" id="level" name="level"
                    placeholder="Le nom du niveau">
                <label for="level">Le nom du niveau</label>
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Créer le niveau</button>
        </form>
    </div>
</div>

